@using Application.ViewModels.Series
@model List<SerieViewModel>
@{
    ViewData["Title"] = "Listado de Series";
}

<div class="container">
    <h1 class="">Series</h1>
    <a asp-controller="Serie" asp-action="Create" class="btn btn-primary-custom m-3">
        <i class="bi bi-plus-circle-fill"></i>
        Agregar Serie
    </a>
    <div class="border rounded-3 p-4 mt-4 bg-dark-subtle">
        <table class="table table_custom table-hover">
            <thead class="fw-bold fs-4">
                <tr>
                    <th class="">Serie</th>
                    <th class="">Generos</th>
                    <th class="">Productora</th>
                    <th class="text-end">Opciones</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (SerieViewModel serie in Model)
                {
                    <tr class="align-middle">
                        <td class="py-3 fs-6">
                            <img src="@serie.ImagePath" class="rounded" alt="@serie.Name" style="width: 50px; height: auto; margin-right: 10px;">
                            @serie.Name<br>
                        </td>
                        <td class="py-3">
                            @if (serie.SecondaryGenreName != null)
                            {
                                <text>@serie.PrimaryGenreName, @serie.SecondaryGenreName</text>
                            }else
                            {
                                @serie.PrimaryGenreName
                            }
                        </td>

                        <td class="py-3">
                            @serie.ProductoraName
                        </td>
                        <td class="text-end align-items-center py-3">
                            <a class="btn btn-outline-warning btn-sm" asp-asp-controller="Serie" asp-action="Edit" asp-route-id=@serie.Id>
                                <i class="bi bi-pencil-square"></i>
                                Editar
                            </a>
                            <a class="btn btn-outline-danger btn-sm" asp-asp-controller="Serie" asp-action="Delete" asp-route-id=@serie.Id>
                                <i class="bi bi-trash-fill"></i>
                                Eliminar
                            </a>
                            <a class="btn btn-outline-info btn-sm" asp-asp-controller="Serie" asp-action="VerDetalle" asp-route-id=@serie.Id>
                                <i class="bi bi-eye-fill"></i>
                                Ver
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>